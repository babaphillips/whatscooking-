<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Whats Cooking</title>
    <link
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/output.css" />
    <link rel="icon" type="image/x-icon" href="/icons/favicon.ico" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Ms+Madi"
    />
  </head>
  <body>
    <div class="bg-hero">
      <header class="w-full">
        <h1 class="text-7xl">Whats Cooking??</h1>
        <nav>
          <a href="/" id="nav-a">Home</a>
          {{#if loggedIn}}
            <a href="/dashboard" id="nav-a">Dashboard</a>
            <a id="logout" class="btn-no-style" id="nav-a">Logout</a>
          {{else}}
            <a href="/login" id="nav-a">Login</a>
          {{/if}}
        </nav>
      </header>

      <main>
        {{{body}}}
      </main>
      <footer>
        Thanks for visiting!
      </footer>
    </div>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
    <script src="/javascript/searchbar.js"></script>
  </body>
</html>